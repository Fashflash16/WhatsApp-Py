#: import FadeTransition kivy.uix.screenmanager.FadeTransition



ScreenManager:
	transition: FadeTransition()
	id:root_manager
	Screen:
		name:'first_screen'
		BoxLayout:
			id:b1
			orientation:'vertical'
			padding:100,100
			spacing:50
			Label:
				font_size:40
				text:"Welcome to WhatsApp"
			Image:
				source:"assets/img/whatsapp1.png" 
			Label:
				markup: True
				text:'Tap "Agree and continue" to accept the [color=#87CEFA]WhatsApp Terms of Service and Privacy Policy[/color].'
			Button:
				background_color:0,255,0,1
				font_size:20
				bold:True
				text:'AGREE AND CONTINUE'
				on_release:app.root.current='verify_no'
	Screen:
		name:"country_option"
		BoxLayout:
			padding:100,100
			spacing:50
			orientation:'vertical'
			BoxLayout:
				Button:
					font_size:20
					text:'<--'
					on_release:app.root.current='first_screen'
				Label:
					text:"Choose a country"
			ListView:
				Label:
					markup:True
					text:'[b]country_name[/b]       country_code'
	Screen:
		name:'verify_no'
		BoxLayout:
			id:b2
			padding:100,100
			spacing:50
			orientation: 'vertical'
			Label:
				markup:True
				text:'[color=]Verify your phone number[/color]'
			Label:
				text:'WhatsApp will send an SMS message to verify your phone number. Enter your country code and phone number:'
			TextInput:
				font_size:25
				on_focus:app.root.current='country_option'
			BoxLayout:
				TextInput:
					id:country_code
					font_size:25
					size_hint_x:.3
				TextInput:
					id:ph_no
					font_size:25
			Button:
				text:'NEXT'
				padding:10,10
				on_release:

	
